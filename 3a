// Import express
const express = require("express");
const app = express();

// Set EJS as the templating engine
app.set("view engine", "ejs");

// Define a route
app.get("/", (req, res) => {
  // Sending data to EJS template
  const data = { name: "Ganesh_J", course: "Full Stack Development" };
  res.render("index", data);
});

// Start the server
app.listen(3000, () => {
  console.log("Server is running on http://localhost:3000");
});


views -> index.ejs
<!DOCTYPE html>
<html>
<head>
  <title>Express EJS Example</title>
</head>
<body style="text-align:center; font-family:Arial;">
  <h1>Welcome to ExpressJS with EJS!</h1>
  <h2>Hello <%= name %> ðŸ‘‹</h2>
  <p>Course: <%= course %></p>
