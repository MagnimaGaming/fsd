import React, { useState } from "react";

function App() {
  // Step 1: Create a state variable
  const [count, setCount] = useState(0);

  // Step 2: Function to update state
  const increaseCount = () => {
    setCount(count + 1); // updates the screen automatically
  };

  // Step 3: Return UI (re-renders when state changes)
  return (
    <div style={{ textAlign: "center", marginTop: "50px" }}>
      <h1>React Screen Update Example</h1>
      <h2>Current Count: {count}</h2>
      <button onClick={increaseCount}>Increase Count</button>
    </div>
  );
}

export default App;
