import React from "react";
import "./App.css"; // External CSS file

function App() {
  // Inline style
  const headingStyle = {
    color: "white",
    backgroundColor: "blue",
    padding: "10px",
    borderRadius: "10px"
  };

  // Sample data to display
  const student = {
    name: "Ganesh",
    course: "Full Stack Development",
    college: "Sasi Institute"
  };

  return (
    <div className="container">
      <h1 style={headingStyle}>React Styling Example</h1>

      <div className="card">
        <h2>Student Details</h2>
        <p><b>Name:</b> {student.name}</p>
        <p><b>Course:</b> {student.course}</p>
        <p><b>College:</b> {student.college}</p>
      </div>
    </div>
  );
}

export default App;




/* External CSS file */
.container {
  text-align: center;
  margin-top: 30px;
  font-family: Arial, sans-serif;
}

.card {
  background-color: lightyellow;
  border: 2px solid orange;
  width: 300px;
  margin: 0 auto;
  padding: 15px;
  border-radius: 10px;
  box-shadow: 2px 2px 10px gray;
}



// File: App.scss
$main-color: blue;
$border-radius: 10px;

.container {
  background: lighten($main-color, 40%);
  border-radius: $border-radius;
  padding: 20px;
}
